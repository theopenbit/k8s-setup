apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nginx
  namespace: <%= namespace %>  
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: lalyos/rpi-nginx:latest
        ports:
        - containerPort: 80
          protocol: TCP
        volumeMounts:
          - name: nginx-default
            mountPath: /etc/nginx/sites-enabled/default                
          - name: nfs
            mountPath: /usr/share/nginx/html
      volumes:      
      - name: nginx-default
        configMap:
          name: lemp-config
          items:
          - key: nginx-default
            path: default
      - name: nfs
        persistentVolumeClaim:
          claimName: nfs
