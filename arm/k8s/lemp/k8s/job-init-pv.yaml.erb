apiVersion: batch/v1
kind: Job
metadata:
  name: init-pv
  namespace: <%= namespace %> 
spec:
  template:
    metadata:
      name: init-pv
    spec:
      containers:
      - name: init-pv
        image: hypriot/rpi-alpine:3.5
        command: ["mkdir", "-p", "/pv/<%= namespace %>/nginx", "/pv/<%= namespace %>/mariadb"]
        volumeMounts:
         - name: pv
           mountPath: /pv
      volumes:      
      - name: pv
        persistentVolumeClaim:
          claimName: pv-<%= namespace %>
      restartPolicy: Never
