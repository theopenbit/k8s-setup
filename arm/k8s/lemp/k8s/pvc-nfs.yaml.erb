kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: nfs-mariadb-<%= namespace %>
  namespace: <%= namespace %>
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1Mi
