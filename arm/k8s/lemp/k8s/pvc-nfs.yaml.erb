---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: nfs-<%= namespace %>
  namespace: <%= namespace %>
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1Mi
