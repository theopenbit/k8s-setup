---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: nfs-<%= namespace %>
  namespace: <%= namespace %>
spec:
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteMany
  nfs:    
    server: <%= namespaceconfig['masterip'] %>
    path: "/<%= namespace %>/nginx"
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: nfs-<%= namespace %>
  namespace: <%= namespace %>
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1Gi
