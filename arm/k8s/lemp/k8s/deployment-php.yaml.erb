apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: php
  namespace: <%= namespace %>  
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: php
    spec:
      containers:
      - name: php
        image: lojzik/rpi-php-fpm:latest
        ports:
        - containerPort: 9000
          protocol: TCP
        volumeMounts:
          - name: nfs
            mountPath: /usr/share/nginx/html
      volumes:      
      - name: nfs
        persistentVolumeClaim:
          claimName: nfs
